<div class="w-full h-screen bg-gray-100">
  <div class="mx-auto max-w-xl h-full py-5">
    <div class="mb-5 text-center">
      <h1 class="mb-3 text-3xl font-bold">Login</h1>
      <p class="text-sm text-gray-600">welcome back, please login to access your account</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4 bg-white border px-5 py-3 rounded-md my-3">
        <p class="alert"><%= alert %></p>
        
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full outline-none focus:shadow-lg px-3 py-1 border rounded-md border-gray-300 bg-gray-50 text-gray-800' %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'w-full outline-none focus:shadow-lg px-3 py-1 border rounded-md border-gray-300 bg-gray-50 text-gray-800' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'w-full px-8 py-3 rounded-md bg-blue-600 text-gray-50 cursor-pointer hover:shadow-lg' %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>


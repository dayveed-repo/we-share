<div class="w-full h-screen flex flex-col">
  <%= render 'tweets/navbar' %>

  <div class="px-5 pt-3 pb-10 w-full bg-gray-100 space-x-10 flex-grow flex justify-center">
    <div class="max-w-xl w-full h-full space-y-4">
        <%= render 'tweets/newHeader' %>

        <%= form_with(model: @tweet) do |f| %>
          <div class=" space-y-4">
            <%= f.text_area :content, rows: 4, placeholder: 'What\'s happening', class: 'w-full outline-none focus:shadow-lg px-3 py-1 border rounded-md border-gray-300 bg-white text-gray-800' %>

            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :parent_id, value: params[:parent_id] %>
            <%= f.hidden_field :main_id, value: params[:main_id] %>

            <% unless params[:parent_id] %>
              <%= f.submit 'Tweet', class:'w-full px-8 py-3 rounded-md bg-blue-600 text-gray-50 cursor-pointer hover:shadow-lg' %>
            <% else %>
              <%= f.submit 'Reply', class:'w-full px-8 py-3 rounded-md bg-blue-600 text-gray-50 cursor-pointer hover:shadow-lg' %>
            <% end %>
          </div>
        <% end %>
        
        <%= link_to "Back", :back, class:'text-lg hover:underline text-blue-700' %>
    </div>   
    
    <%= render 'tweets/rightside' %>
  </div>
</div>